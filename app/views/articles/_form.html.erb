<%= render 'shared/errors', obj: @article %> 
<%= form_with(model: @article, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :title, class: 'form-control shadow', placeholder: 'Title...' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_area :description, rows: 10, class: 'form-control shadow', placeholder: 'Description...' %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: 'btn btn-outline-success btn-lg' %>
  </div>
<% end %>
<p class="text-info">
  <%= link_to '[Cancel and return to articles listing]', articles_path %>
</p>