<% if obj.errors.any? %>
  <div class="alert alert-danger is-dismissable" role="alert">
    <h4 class="alert-heading">Validation errors
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </h4>
      <% obj.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
  </div>
<% end %>