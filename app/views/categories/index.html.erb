<h1 class="text-center mt-2">Categories</h1>
  <% if @categories.size === 0 %>
  <h2 class="text-center mt-2">no categories yet</h1>
  <% end %>
<ul class="categories-list">
  <% @categories.each do |category| %>
    <li><%= link_to "#{category.name} #{category.articles.any? && pluralize(category.articles.count, 'category')}", category %></li>
  <% end %>
</ul>