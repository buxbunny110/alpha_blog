<h1 class="text-center mt-2">New Article</h1>
<div class="container">
  <%= render 'shared/errors', obj: @category %> 
  <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :name, class: 'form-control shadow', placeholder: 'Enter name' %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: 'btn btn-outline-success btn-lg' %>
  </div>
<% end %>
<p class="text-info">
  <%= link_to '[Cancel and return to articles listing]', articles_path %>
</p>
</div>